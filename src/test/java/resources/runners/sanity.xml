<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Suite" verbose="1">
    <listeners>
        <listener class-name="com.orangehrmlive.demo.testsuite.LoginTest"/>
        <listener class-name="com.orangehrmlive.demo.testsuite.UserTestWithDataProvider"/>
        <listener class-name="com.orangehrmlive.demo.testsuite.LoginTestWithDataProvider"/>
        <listener class-name="com.orangehrmlive.demo.testsuite.UsersTest"/>

    </listeners>
    <test name="Sanity Test">
        <groups>
            <run>
                <include name="sanity"></include>
            </run>
        </groups>

        <classes>
            <class name="com.orangehrmlive.demo.testsuite.LoginTest"></class>
            <class name="com.orangehrmlive.demo.testsuite.UserTestWithDataProvider"></class>
            <class name="com.orangehrmlive.demo.testsuite.LoginTestWithDataProvider"></class>
            <class name="com.orangehrmlive.demo.testsuite.UsersTest"></class>

        </classes>
    </test>
</suite>